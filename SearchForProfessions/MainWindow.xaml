<Window x:Class="SearchForProfessions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SearchForProfessions"
        mc:Ignorable="d"
        Title="Поиск профессий" Height="500" MinHeight="500" Width="800" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="65"/>
        <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ScrollViewer Background="White" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button Name="btnMain" FontSize="18" Content="Главная" Style="{StaticResource Button}" />
                <Button Name="btnViewOrganization" FontSize="18" Content="Просмотр организаций" Style="{StaticResource Button}" Click="btnViewOrganization_Click"/>
                <Button Name="btnViewSpecialization" FontSize="18" Content="Просмотр специальностей" Style="{StaticResource Button}" Click="btnViewSpecialization_Click"/>
            </StackPanel>
        </ScrollViewer>
        <Frame Name="frmLoad" Grid.Row="1" NavigationUIVisibility="Hidden" Background="{StaticResource gradient}"/>
    </Grid>
</Window>
