<Window x:Class="SearchForProfessions.QualificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SearchForProfessions"
        mc:Ignorable="d"
        Title="Квалификация" Height="350" MinHeight="350" Width="500" MinWidth="500" Icon="\Resources\logo.ico">
    <Grid Background="{StaticResource gradient}">
        <Grid VerticalAlignment="Center">
            <StackPanel Width="300">
                <TextBlock Text="Добавление квалификации" Style="{StaticResource TextBlockHeader}"/>
                <GroupBox Margin="0,10,0,10" Header="Наименование *" Style="{StaticResource GroupBoxBase}">
                    <TextBox Name="tbName"/>
                </GroupBox>
                <Button Margin="0,10,0,0" Width="200" Content="Сохранить" Style="{StaticResource ButtonBase}" Name="btnSave" Click="btnSave_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
